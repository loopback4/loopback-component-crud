{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start",
            "type": "shell",
            "dependsOn": "stop",
            "command": "docker-compose up --detach --build",
            "options": {
                "env": {
                    "CWD": "${workspaceFolder}"
                }
            }
        },
        {
            "label": "stop",
            "type": "shell",
            "command": "docker-compose down --volumes",
            "options": {
                "env": {
                    "CWD": "${workspaceFolder}"
                }
            }
        }
    ]
}
